<h1 align="center"> All Alpha Bloggers</h1>

<div align="center">
  <%= will_paginate %>
</div>
<% @users.each do |user| %>
  <div class="row center">
    <div class="well col-md-4 col-md-offset-4">
      <ul class="listing">
        <li><%=link_to gravatar_for(user), user_path(user)%></li>
        <li><%=link_to user.username, user_path(user)%></li>
        <li><small>
          <%= pluralize(user.articles.count, "article") if user.articles%>
        </small></li>
        <% if current_user.admin?%>
          <li><%= link_to 'Delete this User', user_path(user), method: :delete,
               data:{confirm: "Are you sure you want to delete this user"}%></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>
